
import java.util.Calendar;
import java.util.GregorianCalendar;


public class Main {
        public static void main(String[] args){


                GregorianCalendar calendar1 = new GregorianCalendar();

                calendar1.set(Calendar.YEAR,2011);
                calendar1.set(Calendar.MONTH, Calendar.JANUARY);
                calendar1.set(Calendar.DAY_OF_MONTH, 28);



                System.out.println("1- The year: " + calendar1.get(calendar1.YEAR));
                System.out.println("2- The month index: " + calendar1.get(calendar1.MONTH));
                System.out.println("3- The day of the month: " + calendar1.get(calendar1.DAY_OF_MONTH));
                System.out.println("4- The day of the week index: " + calendar1.get(calendar1.DAY_OF_WEEK));


                calendar1.roll(Calendar.YEAR, 2);
                System.out.println("5- New year: " + calendar1.get(calendar1.YEAR));
                System.out.println("6- New week day index: "+calendar1.get(calendar1.DAY_OF_WEEK));


        }
}
